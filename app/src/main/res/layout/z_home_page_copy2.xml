<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7edf9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/header"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f0f0f0">

            <ImageView
                android:id="@+id/dehaze"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_dehaze" />

            <TextView
                android:id="@+id/page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@id/dehaze"

                android:layout_centerInParent="true"
                android:layout_marginStart="50dp"
                android:text="Home"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_notification" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_setting" />

        </RelativeLayout>

        <!-- Search View -->
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header">

                <android.widget.SearchView
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"

                    android:background="@drawable/rounded_corner"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search..." />

                <HorizontalScrollView
                    android:id="@+id/recenlySearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@id/search_bar">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="#fffafa"

                            android:text="IT Engineering"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="#fffafa"

                            android:text="Bio Engineering"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="#fffafa"

                            android:text="Data Science"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:id="@+id/search_badge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/recenlySearch"

                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:id="@+id/recommandation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#3F51B5"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"

                        android:text="Recommandation " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#616161"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"

                        android:text="View all" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/search_badge"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/picture1"
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:src="@drawable/felogo"
                        android:background="#123456"

                        />

                    <ImageButton
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:layout_alignParentEnd="true"/>

                    <ImageButton
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:layout_below="@id/picture1"/>

                    <ImageButton
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:layout_below="@id/picture1"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/favorited"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/image"

                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:id="@+id/favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#3F51B5"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"

                        android:text="Favorite " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#616161"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"

                        android:text="View all" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/favorited"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <ImageButton
                        android:id="@+id/picture3"
                        android:layout_width="195dp"
                        android:layout_height="170dp"/>

                    <ImageButton
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:layout_alignParentEnd="true"/>

                    <ImageButton
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:layout_below="@id/picture3"/>

                    <ImageButton
                        android:layout_width="195dp"
                        android:layout_height="170dp"
                        android:layout_below="@id/picture3"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>




            </RelativeLayout>





        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
