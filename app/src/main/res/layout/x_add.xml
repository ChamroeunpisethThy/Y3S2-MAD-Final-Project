<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/headerBar">

            <TextView
                android:id="@+id/page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"

                android:layout_marginStart="25dp"
                android:text="@string/addPage"
                android:textColor="@color/headerText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_notification" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_setting" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header">

            <RelativeLayout
                android:id="@+id/layoutScrollView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/editUserName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_centerInParent="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/backgroundCard"

                            android:padding="16dp"
                            android:text="First name"
                            android:textColor="@color/primaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"

                            android:layout_marginEnd="16dp"
                            android:background="@color/line" />

                        <EditText
                            android:id="@+id/editLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/backgroundCard"


                            android:padding="16dp"
                            android:text="Last name"
                            android:textColor="@color/primaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editUserName"

                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"

                    android:text="Enter your name and add an optional profile photo."
                    android:textColor="@color/gray" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/addBio"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/usernameText"
                    android:layout_centerInParent="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/backgroundCard"

                            android:padding="16dp"
                            android:text="Bio"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addBio"

                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"

                    android:text="You can adda few lines about yourself."
                    android:textColor="@color/gray" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/addDOB"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bioText"
                    android:layout_centerInParent="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/DOB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/backgroundCard"

                            android:padding="16dp"
                            android:text="Date of Birth"
                            android:textColor="@color/primaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/DOBText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addDOB"

                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"

                    android:text="Enter your Birthday."
                    android:textColor="@color/gray" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/emailAndPhoneNumber"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/DOBText"
                    android:layout_centerInParent="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/changePhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/backgroundCard"

                            android:padding="16dp"
                            android:text="Change Number"
                            android:textColor="@color/primaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"

                            android:layout_marginEnd="16dp"
                            android:background="@color/line" />

                        <EditText
                            android:id="@+id/addEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/backgroundCard"


                            android:padding="16dp"
                            android:text="Email"
                            android:textColor="@color/primaryColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/logout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailAndPhoneNumber"
                    android:layout_centerInParent="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="20dp"
                            android:text="@string/logoutButtonProfilePage"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>