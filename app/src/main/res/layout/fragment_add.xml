<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@color/headerBar">

            <TextView
                android:id="@+id/page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"

                android:layout_marginStart="25dp"
                android:text="@string/addPage"
                android:textColor="@color/headerText"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_notification" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"

                android:src="@drawable/ic_action_setting" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header">

            <RelativeLayout
                android:id="@+id/layoutScrollView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/inputNameMeeting"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <EditText
                        android:id="@+id/nameMeeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundCard"

                        android:padding="16dp"
                        android:text="Name Meeting"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/nameMeetingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputNameMeeting"

                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"

                    android:text="Enter your meeting name."
                    android:textColor="@color/gray" />

                <RelativeLayout
                    android:id="@+id/inputDateAndTime"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameMeetingText">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/inputDateMeeting"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="175dp"

                        app:cardBackgroundColor="@color/backgroundCard"
                        app:cardCornerRadius="10dp">

                        <EditText
                            android:id="@+id/bio"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@color/backgroundCard"

                            android:padding="16dp"
                            android:text="Date"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/inputTimeMeeting"

                        android:layout_width="140dp"
                        android:layout_height="wrap_content"

                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"

                        app:cardBackgroundColor="@color/backgroundCard"
                        app:cardCornerRadius="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/backgroundCard"

                            android:padding="16dp"
                            android:text="Time"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/dateAndTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputDateAndTime"

                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"

                    android:text="Enter your meeting date and time."
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/addSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateAndTimeText"

                    android:layout_centerInParent="true"
                    android:layout_marginStart="50dp"
                    android:backgroundTint="@color/backgroundMeetingButton"
                    android:text="Add to schedule"
                    android:textAllCaps="false"
                    android:textColor="@color/buttonText" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/inputDescriptionMeeting"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addSchedule"
                    android:layout_centerHorizontal="true"

                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"

                    app:cardBackgroundColor="@color/backgroundCard"
                    app:cardCornerRadius="10dp">

                    <EditText
                        android:id="@+id/descriptionMeeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundCard"

                        android:padding="16dp"
                        android:text="Description (optional)"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inputDescriptionMeeting"

                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"

                    android:text="This will help people find your meeting."
                    android:textColor="@color/gray" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/descriptionText"

                    android:layout_marginStart="15dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginEnd="15dp"

                    android:backgroundTint="@color/backgroundMeetingButton"

                    android:text="Create Meeting"
                    android:textAllCaps="false"
                    android:textColor="@color/buttonText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</FrameLayout>